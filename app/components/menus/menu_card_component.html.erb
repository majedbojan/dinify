<div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 hover:shadow-lg transition-shadow duration-200">
  <div class="flex justify-between items-start mb-4">
    <div>
      <h3 class="text-xl font-semibold text-gray-900 mb-2">
        <%= menu.name %>
      </h3>
      <% if menu.description.present? %>
        <p class="text-gray-600 text-sm mb-3">
          <%= truncate(menu.description, length: 120) %>
        </p>
      <% end %>
    </div>
    
    <div class="flex flex-col items-end space-y-2">
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_badge_class %>">
        <%= status_text %>
      </span>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= menu_type_badge_class %>">
        <%= menu_type_text %>
      </span>
    </div>
  </div>

  <div class="flex justify-between items-center text-sm text-gray-500 mb-4">
    <span>
      <%= pluralize(menu.dishes_count, 'dish') %>
    </span>
    <span>
      Position: <%= menu.position %>
    </span>
  </div>

  <% if show_actions && can_edit? %>
    <div class="flex space-x-2 pt-4 border-t border-gray-200">
      <%= render Ui::ButtonComponent.new(
        variant: :outline,
        size: :sm,
        class: 'flex-1'
      ) do %>
        View Details
      <% end %>
      
      <%= render Ui::ButtonComponent.new(
        variant: :primary,
        size: :sm,
        class: 'flex-1'
      ) do %>
        Edit Menu
      <% end %>
    </div>
  <% elsif show_actions %>
    <div class="pt-4 border-t border-gray-200">
      <%= render Ui::ButtonComponent.new(
        variant: :outline,
        size: :sm,
        class: 'w-full'
      ) do %>
        View Menu
      <% end %>
    </div>
  <% end %>
</div>
