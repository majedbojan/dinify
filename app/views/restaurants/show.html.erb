<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Restaurant Header -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 mb-8">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">
            <%= @restaurant.name %>
          </h1>
          <% if @restaurant.description.present? %>
            <p class="text-gray-600 mb-4">
              <%= @restaurant.description %>
            </p>
          <% end %>
          <div class="flex items-center space-x-6 text-sm text-gray-500">
            <% if @restaurant.email.present? %>
              <span><i class="fas fa-envelope mr-1"></i> <%= @restaurant.email %></span>
            <% end %>
            <% if @restaurant.phone.present? %>
              <span><i class="fas fa-phone mr-1"></i> <%= @restaurant.phone %></span>
            <% end %>
            <% if @restaurant.website.present? %>
              <span><i class="fas fa-globe mr-1"></i> <%= link_to @restaurant.website, @restaurant.website, target: '_blank', class: 'text-blue-600 hover:text-blue-800' %></span>
            <% end %>
          </div>
        </div>
        
        <div class="flex items-center space-x-2">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= 
            @restaurant.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' 
          %>">
            <%= @restaurant.status.humanize %>
          </span>
          
          <%= render Ui::ButtonComponent.new(
            variant: :outline,
            size: :sm
          ) do %>
            <i class="fas fa-edit mr-1"></i>
            Edit Restaurant
          <% end %>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-list text-2xl text-blue-600"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Menus</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @menu_stats[:total_menus] %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-check-circle text-2xl text-green-600"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Published Menus</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @menu_stats[:published_menus] %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-utensils text-2xl text-purple-600"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Total Dishes</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @menu_stats[:total_dishes] %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-star text-2xl text-yellow-600"></i>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-500">Published Dishes</p>
            <p class="text-2xl font-semibold text-gray-900"><%= @menu_stats[:published_dishes] %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Menus Section -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex justify-between items-center">
          <h2 class="text-xl font-semibold text-gray-900">Menus</h2>
          <%= render Ui::ButtonComponent.new(
            variant: :primary,
            size: :sm
          ) do %>
            <i class="fas fa-plus mr-1"></i>
            Add Menu
          <% end %>
        </div>
      </div>
      
      <div class="p-6">
        <% if @menus.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% @menus.each do |menu| %>
              <%= render Menus::MenuCardComponent.new(
                menu: menu,
                current_user: current_user
              ) %>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <div class="mx-auto h-16 w-16 text-gray-400">
              <i class="fas fa-list text-4xl"></i>
            </div>
            <h3 class="mt-4 text-lg font-medium text-gray-900">No menus yet</h3>
            <p class="mt-2 text-gray-500">Create your first menu to get started.</p>
            <div class="mt-6">
              <%= render Ui::ButtonComponent.new(
                variant: :primary,
                size: :lg
              ) do %>
                <i class="fas fa-plus mr-2"></i>
                Create Your First Menu
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
