<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">My Restaurants</h1>
          <p class="mt-2 text-gray-600">Manage your restaurant menus and dishes</p>
        </div>
        <%= render Ui::ButtonComponent.new(
          variant: :primary,
          size: :lg,
          class: 'ml-4'
        ) do %>
          <i class="fas fa-plus mr-2"></i>
          Add Restaurant
        <% end %>
      </div>
    </div>

    <!-- Filters -->
    <div class="mb-6 bg-white rounded-lg shadow p-4">
      <div class="flex flex-wrap gap-4">
        <div class="flex-1 min-w-64">
          <input 
            type="text" 
            placeholder="Search restaurants..." 
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
        </div>
        <select class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
          <option value="">All Status</option>
          <option value="active">Active</option>
          <option value="inactive">Inactive</option>
          <option value="suspended">Suspended</option>
        </select>
      </div>
    </div>

    <!-- Restaurants Grid -->
    <% if @restaurants.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @restaurants.each do |restaurant| %>
          <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 hover:shadow-lg transition-shadow duration-200">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">
                  <%= restaurant.name %>
                </h3>
                <% if restaurant.description.present? %>
                  <p class="text-gray-600 text-sm mb-3">
                    <%= truncate(restaurant.description, length: 120) %>
                  </p>
                <% end %>
              </div>
              
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= 
                restaurant.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' 
              %>">
                <%= restaurant.status.humanize %>
              </span>
            </div>

            <div class="flex justify-between items-center text-sm text-gray-500 mb-4">
              <span>
                <%= pluralize(restaurant.menus.count, 'menu') %>
              </span>
              <span>
                <%= restaurant.email %>
              </span>
            </div>

            <div class="flex space-x-2 pt-4 border-t border-gray-200">
              <%= render Ui::ButtonComponent.new(
                variant: :outline,
                size: :sm,
                class: 'flex-1'
              ) do %>
                <i class="fas fa-eye mr-1"></i>
                View
              <% end %>
              
              <%= render Ui::ButtonComponent.new(
                variant: :primary,
                size: :sm,
                class: 'flex-1'
              ) do %>
                <i class="fas fa-edit mr-1"></i>
                Manage
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <div class="mx-auto h-24 w-24 text-gray-400">
          <i class="fas fa-store text-6xl"></i>
        </div>
        <h3 class="mt-4 text-lg font-medium text-gray-900">No restaurants yet</h3>
        <p class="mt-2 text-gray-500">Get started by creating your first restaurant.</p>
        <div class="mt-6">
          <%= render Ui::ButtonComponent.new(
            variant: :primary,
            size: :lg
          ) do %>
            <i class="fas fa-plus mr-2"></i>
            Create Your First Restaurant
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
