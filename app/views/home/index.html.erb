<% content_for :title, "Welcome - Dinify" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center">
  <div class="max-w-md w-full text-center">
    <div class="bg-white py-8 px-6 shadow-xl rounded-lg sm:px-10">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to Dinify!</h1>
      <p class="text-gray-600 mb-6">You have successfully signed in to your account.</p>
      
      <div class="space-y-4">
        <p class="text-sm text-gray-500">
          This is your dashboard. More features coming soon!
        </p>
        
        <div class="pt-4">
          <%= link_to "Sign Out", session_path, method: :delete, 
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    </div>
  </div>
</div>
