<h1>Sign up</h1>

<%= form_with model: @user, url: users_path do |form| %>
  <div>
    <%= form.label :email_address %>
    <%= form.email_field :email_address %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit "Sign up" %>
  </div>
<% end %>
